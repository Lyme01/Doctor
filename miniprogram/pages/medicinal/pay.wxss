/* pages/medicinal/pay.wxss */
page{
  background-color: rgb(228, 226, 226);
}
.medicinalList{
  display: flex;
  flex-direction: row;
  width: 96%;
  height: 150rpx;
  align-self: center;
  align-items: center;
  justify-content: space-between;
}
.medicinalList1{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-left: 30rpx;
}
.medicinalList2{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.medicinalList3{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}
.medicinalList4{
  display: flex;
  flex-direction: row;
  width: 25%;
  justify-content: space-between;
  font-size: 20px;
  align-items: center;
}

.line{
  width: 100%;
  height: 5rpx;
  background-color: rgb(136, 135, 135);
  margin-bottom: 10rpx;
}


.button{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  justify-content: space-between;
  width: 100%;
  background-color: rgb(238, 238, 238);
  align-items: center;
}
.pay{
  display: flex;
  flex-direction: row;
  width: 60%;
  align-items: center;
  align-self: center;
  justify-content: center;
  height: 80rpx;
  background-color: rgb(255, 68, 35);
}

.medicinal{
  display: flex;
  width: 96%;
  align-items: center;
  align-self: center;
  justify-content: center;
  background-color: #fff;
  height: 300rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.address{
  display: flex;
  flex-direction: column;
  width: 96%;
  align-items: center;
  align-self: center;
  justify-content: center;
  background-color: #fff;
  height: 200rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.address1{
  display: flex;
  flex-direction: row;
}
.address0{
  display: flex;
  flex-direction: row;
}
.remarks{
  display: flex;
  width: 96%;
  align-items: center;
  align-self: center;
  justify-content: center;
  background-color: #fff;
  height: 300rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
}