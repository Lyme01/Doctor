/* pages/record/order_detail.wxss */
.address{
  display: flex;
  flex-direction: column;
}
.state{
  width: 100%;
  height: 100px;
  background-color: #5592ee;
  align-items: center;
  font: 30px ;
  color: white;
  line-height: 100px;
  text-align: center;
}
.line{
  width: 100%;
  background-color:#5592ee;
  height: 5px;
}
.address_1{
  height: 80px;
  display: flex;
  flex-direction: row;
  margin-top: 15px;
}
.address_2{
  display: flex;
  flex-direction: column;
  margin-left: 20px;
}
.address_3{
  display: flex;
  flex-direction: row;
}

.order{
  display: flex;
  width: 96%;
  height: 200rpx;
  flex-direction: column;
  align-self: center;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.order_1{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 230rpx;
  align-items: center;
}

.order_2{
  display: flex;
  height: 100rpx;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 50rpx;
}
.order_message{
  width: 96%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-self: center;
  background-color: #fff;
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
}
.order_3{
  display: flex;
  flex-direction: column;
  margin-left: 115px;
}