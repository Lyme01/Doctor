/* pages/record/order.wxss */

page{
  background-color: rgb(233, 230, 230);
}

swiper-tab{  
  width: 100%;  
  border-bottom: 1px solid #eee;  
  }  
.swiper-tab-list{  
font-size: 20px;  
display: inline-block;  
width: 25%;  
color: #666;
text-align: center;
}  

.swiper-box{ 
display: block; 
height: 100%; 
width: 100%; 
overflow: hidden; 
}  
.on{ 
  color: #dd2727;  
  border-bottom: 5rpx solid #dd2727;
  } 
.swiper-box{
  margin-bottom: 250rpx;
}
.order{
  display: flex;
  width: 96%;
  height: 300rpx;
  flex-direction: column;
  align-self: center;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}


.order_1{
  display: flex;
  flex-direction: row;
  width: 80%;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
}

.order_2{
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 230rpx;
  align-items: center;
}

.order_3{
  display: flex;
  height: 100rpx;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 50rpx;
}