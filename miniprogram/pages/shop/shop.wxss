/* pages/shop/shop.wxss */
/* 搜索框 */
.search{
  width: 85%;
  height: 60rpx;
 display: flex;
 flex-direction: row;
 border: 1px solid slategray;
 border-radius: 50rpx;
 padding-left: 50rpx;
 align-items: center;
 align-self: center;
 margin-top: 10px;
}
.page{
  margin-top: 40dp;
}
/* 搜索列表 */
.list{
 
}
.list1{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

/* 药品分类 */
.sort{
  width: 95%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #fff;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
  position: relative;
  z-index: 1;

}
.sort1{
  display: flex;
  flex-direction: column;
  width: 22%;
  align-self: center;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  border: 1px solid silver;
}

.sort2{
 display: flex;
 flex-direction: column;
}
/* 药品展示 */
.line{
  width: 100%;
  height: 5rpx;
  background-color: rgb(136,135,135);
  margin-bottom: 30rpx;
}
.medicinal{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-self: center;
  align-items: center;
  background-color: snow;
  position: relative;
  z-index: 2;
}
.medicinal1{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}
.img{
  width: 350rpx;
  height: 350rpx;
  border-radius: 20rpx;
}
.medicinal2{
  display: flex;
  flex-direction: row;
  height: 130rpx;
  border: 1px solid silver;
  width: 95%;
  background-color: rgb(245,239,239);
  border-radius: 10rpx;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 30rpx;
 
}

