.line{
  width: 100%;
  height: 5rpx;
  background-color: rgb(136,135,135);
  margin-bottom: 30rpx;
}
.medicinal{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-self: center;
  align-items: center;
  background-color: snow;
}
.medicinal1{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}
.img{
  width: 350rpx;
  height: 350rpx;
  border-radius: 20rpx;
}
.medicinal2{
  display: flex;
  flex-direction: row;
  height: 130rpx;
  border: 1px solid silver;
  width: 95%;
  background-color: rgb(245,239,239);
  border-radius: 10rpx;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 30rpx;
 
}

.select{
  display: flex;
  flex-direction: row;
  width: 96%;
  height: 80rpx;
  font-size: 20px;
  align-items: center;
  align-self: center;
  justify-content: space-between;
  background-color: #fff;
}

